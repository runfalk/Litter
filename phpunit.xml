<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	backupGlobals="false"
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
	bootstrap="tests/bootstrap.php"
>
	<php>
		<ini name="suhosin.executor.include.whitelist" value="data,phar"/>
		<ini name="allow_url_include" value="on"/>
	</php>
	<testsuites>
		<testsuite name="Litter Test Suite">
			<directory>./tests/Litter/</directory>
		</testsuite>
	</testsuites>
</phpunit>
